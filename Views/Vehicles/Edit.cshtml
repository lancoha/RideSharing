@model RideSharing.ViewModels.VehicleEditViewModel

@{
    ViewData["Title"] = "Edit Vehicle";
}

<h2>@ViewData["Title"]</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Edit" asp-controller="Vehicles" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Make">Make:</label>
        <input asp-for="Make" class="form-control" name="Make" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model">Model:</label>
        <input asp-for="Model" class="form-control" name="Model" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Year">Model year:</label>
        <input asp-for="Year" class="form-control" type="number" name="Year" min="1900" max="2100" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LicensePlate">License plate:</label>
        <input asp-for="LicensePlate" class="form-control" name="LicensePlate" />
        <span asp-validation-for="LicensePlate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Color">Color:</label>
        <input asp-for="Color" class="form-control" name="Color" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Capacity">Maximum capacity of passengers:</label>
        <input asp-for="Capacity" class="form-control" type="number" name="Capacity" min="1" max="10" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" onclick="history.back()">Back</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
