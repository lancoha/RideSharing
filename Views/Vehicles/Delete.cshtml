@model RideSharing.Models.Vehicle

@{
    ViewData["Title"] = "Delete Vehicle";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this vehicle?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Make
        </dt>
        <dd class="col-sm-10">
            @Model.Make
        </dd>
        <dt class="col-sm-2">
            Model
        </dt>
        <dd class="col-sm-10">
            @Model.Model
        </dd>
        <dt class="col-sm-2">
            License plate
        </dt>
        <dd class="col-sm-10">
            @Model.LicensePlate
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a class="btn btn-secondary" onclick="history.back()">Back</a>
</form>
