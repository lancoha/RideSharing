@model RideSharing.Models.Vehicle

@{
    ViewData["Title"] = "Izbriši Vozilo";
}

<h1>@ViewData["Title"]</h1>

<h3>Ali ste prepričani, da želite izbrisati to vozilo?</h3>
<div>
    <h4>Vozilo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Proizvajalec
        </dt>
        <dd class="col-sm-10">
            @Model.Make
        </dd>
        <dt class="col-sm-2">
            Model
        </dt>
        <dd class="col-sm-10">
            @Model.Model
        </dd>
        <dt class="col-sm-2">
            Registrska Številka
        </dt>
        <dd class="col-sm-10">
            @Model.LicensePlate
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Izbriši</button> |
    <a asp-action="Index" class="btn btn-secondary">Nazaj na seznam</a>
</form>
