@model RideSharing.Models.Vehicle

@{
    ViewData["Title"] = "Podrobnosti Vozila";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Vozilo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Proizvajalec
        </dt>
        <dd class="col-sm-10">
            @Model.Make
        </dd>
        <dt class="col-sm-2">
            Model
        </dt>
        <dd class="col-sm-10">
            @Model.Model
        </dd>
        <dt class="col-sm-2">
            Letnik
        </dt>
        <dd class="col-sm-10">
            @Model.Year
        </dd>
        <dt class="col-sm-2">
            Registrska Å tevilka
        </dt>
        <dd class="col-sm-10">
            @Model.LicensePlate
        </dd>
        <dt class="col-sm-2">
            Barva
        </dt>
        <dd class="col-sm-10">
            @Model.Color
        </dd>
        <dt class="col-sm-2">
            Kapaciteta
        </dt>
        <dd class="col-sm-10">
            @Model.Capacity
        </dd>
        <dt class="col-sm-2">
            Ustvarjeno
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedAt.ToLocalTime().ToString("g")
        </dd>
        <dt class="col-sm-2">
            Posodobljeno
        </dt>
        <dd class="col-sm-10">
            @Model.UpdatedAt.ToLocalTime().ToString("g")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Uredi</a> |
    <a asp-action="Index" class="btn btn-secondary">Nazaj na seznam</a>
</div>
