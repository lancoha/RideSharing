@model IEnumerable<RideSharing.Models.Vehicle>

@{
    ViewData["Title"] = "My vehicles";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add a new vehicle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Model year</th>
            <th>License plate</th>
            <th>Color</th>
            <th>Capacity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model)
        {
            <tr>
                <td>@vehicle.Make</td>
                <td>@vehicle.Model</td>
                <td>@vehicle.Year</td>
                <td>@vehicle.LicensePlate</td>
                <td>@vehicle.Color</td>
                <td>@vehicle.Capacity</td>
                <td>
                    <a asp-action="Details" asp-route-id="@vehicle.Id" class="btn btn-info btn-sm">Details</a>

                    @if (vehicle.Rides != null && vehicle.Rides.Any())
                    {
                        <button class="btn btn-warning btn-sm" disabled>Edit</button>
                        <button class="btn btn-danger btn-sm" disabled>Delete</button>
                    }
                    else
                    {
                        <a asp-action="Edit" asp-route-id="@vehicle.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@vehicle.Id" class="btn btn-danger btn-sm">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
