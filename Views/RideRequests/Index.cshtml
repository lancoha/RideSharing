@model IEnumerable<RideSharing.Models.RideRequest>

@{
    ViewData["Title"] = "My ride requests";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Prevoz</th>
            <th>Origin</th>
            <th>Destination</th>
            <th>Date of request</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var request in Model)
    {
        <tr>
            <td>@request.Ride.Origin - @request.Ride.Destination</td>
            <td>@request.Origin</td>
            <td>@request.Destination</td>
            <td>@request.RequestedAt.ToLocalTime().ToString("g")</td>
            <td>@request.Status</td>
            <td>
                <a asp-action="Details" asp-route-id="@request.Id" class="btn btn-info btn-sm">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
