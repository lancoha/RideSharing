@model RideSharing.ViewModels.RideRequestCreateViewModel

@{
    ViewData["Title"] = "Pošlji Zahtevo za Prevoz";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="RideId" />
    
    <div class="form-group">
        <label asp-for="Origin" class="control-label">Izvor</label>
        <input asp-for="Origin" class="form-control" />
        <span asp-validation-for="Origin" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Destination" class="control-label">Destinacija</label>
        <input asp-for="Destination" class="form-control" />
        <span asp-validation-for="Destination" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Pošlji Zahtevo" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
