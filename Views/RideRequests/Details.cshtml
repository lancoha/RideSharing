@model RideSharing.Models.RideRequest

@{
    ViewData["Title"] = "Podrobnosti Zahteve za Prevoz";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>RideRequest</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Potnik</dt>
        <dd class="col-sm-10">@Model.Passenger.UserName</dd>

        <dt class="col-sm-2">Prevoz</dt>
        <dd class="col-sm-10">@Model.Ride.Origin - @Model.Ride.Destination</dd>

        <dt class="col-sm-2">Datum Prevoza</dt>
        <dd class="col-sm-10">@Model.Ride.RideDateTime.ToLocalTime().ToString("g")</dd>

        <dt class="col-sm-2">Ustvarjeno</dt>
        <dd class="col-sm-10">@Model.Ride.CreatedAt.ToLocalTime().ToString("g")</dd>

        <dt class="col-sm-2">Posodobljeno</dt>
        <dd class="col-sm-10">@Model.Ride.UpdatedAt.ToLocalTime().ToString("g")</dd>

        <dt class="col-sm-2">Izvor</dt>
        <dd class="col-sm-10">@Model.Origin</dd>

        <dt class="col-sm-2">Destinacija</dt>
        <dd class="col-sm-10">@Model.Destination</dd>

        <dt class="col-sm-2">Datum Zahteve</dt>
        <dd class="col-sm-10">@Model.RequestedAt.ToLocalTime().ToString("g")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Nazaj</a>
</div>
