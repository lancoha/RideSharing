@model IEnumerable<RideSharing.Models.RideRequest>

@{
    ViewData["Title"] = "Ride Requests";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Ride Request</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ride</th>
            <th>Passenger</th>
            <th>Status</th>
            <th>Requested At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Ride.Origin to @item.Ride.Destination</td>
            <td>@item.Passenger.FirstName @item.Passenger.LastName</td>
            <td>@item.Status</td>
            <td>@item.RequestedAt.ToString("g")</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a> |
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
