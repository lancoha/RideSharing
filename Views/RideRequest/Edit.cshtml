@model RideSharing.Models.RideRequest

@{
    ViewData["Title"] = "Edit Ride Request";
}

<h1>@ViewData["Title"]</h1>

<h4>Ride Request</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RideId" class="control-label"></label>
                <select asp-for="RideId" class="form-control" asp-items="ViewBag.RideId"></select>
                <span asp-validation-for="RideId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
