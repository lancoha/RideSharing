@model RideSharing.ViewModels.RideRequestCreateViewModel

@{
    ViewData["Title"] = "Ustvari Novo Zahtevo za Vožnjo";
}

<h2>@ViewData["Title"]</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="RideId" class="control-label"></label>
        <select asp-for="RideId" class="form-control" asp-items="ViewBag.Rides">
            <option value="">-- Izberite vožnjo --</option>
        </select>
        <span asp-validation-for="RideId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Ustvari" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
