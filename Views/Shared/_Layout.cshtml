<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RideSharing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RideSharing.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RideSharing</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    
                    <ul class="navbar-nav flex-grow-1">
                                                <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Rides</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="RideRequests" asp-action="Index">My Requests</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Vehicles" asp-action="Index">My vehicles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Rides" asp-action="Index">My rides</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="RideRequests" asp-action="MyIncomingRequests">Incoming requests</a>
                        </li>
                    </ul>
                    @using Microsoft.AspNetCore.Identity
                    @inject SignInManager<ApplicationUser> SignInManager
                    <ul class="navbar-nav">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        @await Html.PartialAsync("_LoginPartial")
                    }
                    else
                    {
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/Identity/Account/Login">Login</a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link text-dark" href="/Identity/Account/Register">Register</a>
                    </li>
                    }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - RideSharing - <a asp-area="" asp-controller="Home"></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
