@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (SignInManager.IsSignedIn(User))
{
    var currentUser = await UserManager.GetUserAsync(User); 
    <li class="nav-item">
        <span class="nav-link text-dark">Welcome, @currentUser.FirstName!</span>
    </li>
    <li class="nav-item">
        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="form-inline">
            <button type="submit" class="btn btn-link nav-link text-dark" style="cursor:pointer;">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
}
