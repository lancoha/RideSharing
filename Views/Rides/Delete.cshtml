@model RideSharing.Models.Ride

@{
    ViewData["Title"] = "Delete Ride";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this ride?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Driver</dt>
        <dd class="col-sm-10">You</dd>

        <dt class="col-sm-2">Vehicle</dt>
        <dd class="col-sm-10">@Model.Vehicle?.Make @Model.Vehicle?.Model</dd>

        <dt class="col-sm-2">Origin</dt>
        <dd class="col-sm-10">@Model.Origin</dd>

        <dt class="col-sm-2">Destination</dt>
        <dd class="col-sm-10">@Model.Destination</dd>

        <dt class="col-sm-2">Ride date</dt>
        <dd class="col-sm-10">@Model.RideDateTime.ToLocalTime().ToString("g")</dd>

        <dt class="col-sm-2">Created at</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToLocalTime().ToString("g")</dd>

        <dt class="col-sm-2">Updated at</dt>
        <dd class="col-sm-10">@Model.UpdatedAt.ToLocalTime().ToString("g")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-secondary" onclick="history.back()">Back</a>
    </form>
</div>
