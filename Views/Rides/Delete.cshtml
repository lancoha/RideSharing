@model RideSharing.Models.Ride

@{
    ViewData["Title"] = "Izbriši Prevoz";
}

<h2>@ViewData["Title"]</h2>

<h3>Ali ste prepričani, da želite izbrisati ta prevoz?</h3>
<div>
    <h4>Ride</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Voznik</dt>
        <dd class="col-sm-10">@Model.Driver?.UserName</dd>

        <dt class="col-sm-2">Vozilo</dt>
        <dd class="col-sm-10">@Model.Vehicle?.Make @Model.Vehicle?.Model</dd>

        <dt class="col-sm-2">Izvor</dt>
        <dd class="col-sm-10">@Model.Origin</dd>

        <dt class="col-sm-2">Destinacija</dt>
        <dd class="col-sm-10">@Model.Destination</dd>

        <dt class="col-sm-2">Datum Prevoza</dt>
        <dd class="col-sm-10">@Model.RideDateTime.ToLocalTime().ToString("g")</dd>

        <dt class="col-sm-2">Ustvarjeno</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToLocalTime().ToString("g")</dd>

        <dt class="col-sm-2">Posodobljeno</dt>
        <dd class="col-sm-10">@Model.UpdatedAt.ToLocalTime().ToString("g")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Izbriši" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Nazaj</a>
    </form>
</div>
