@model RideSharing.ViewModels.RideDetailsViewModel

@{
    ViewData["Title"] = "Podrobnosti Prevoza";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Voznik: @Model.DriverEmail</h4>
        
        <dl class="row">
            <dt class="col-sm-3">Vozilo</dt>
            <dd class="col-sm-9">@Model.VehicleName</dd>

            <dt class="col-sm-3">Izvor</dt>
            <dd class="col-sm-9">@Model.Origin</dd>

            <dt class="col-sm-3">Destinacija</dt>
            <dd class="col-sm-9">@Model.Destination</dd>

            <dt class="col-sm-3">Datum Prevoza</dt>
            <dd class="col-sm-9">@Model.RideDateTime.ToString("dd/MM/yyyy HH:mm")</dd>

            <!-- ✅ Novo polje: Prosti sedeži -->
            <dt class="col-sm-3">Prosti sedeži</dt>
            <dd class="col-sm-9">@Model.AvailableSeats</dd>

            <!-- ✅ Novo polje: Cena na sedež -->
            <dt class="col-sm-3">Cena na sedež (€)</dt>
            <dd class="col-sm-9">@Model.PricePerSeat €</dd>

            <!-- ✅ Novo polje: Lokacija pobiranja -->
            <dt class="col-sm-3">Kje te lahko poberem?</dt>
            <dd class="col-sm-9">@Model.PickupLocation</dd>

            <!-- ✅ Novo polje: Opis poti -->
            <dt class="col-sm-3">Opis poti</dt>
            <dd class="col-sm-9">@Model.RideDescription</dd>
        </dl>
        <form asp-controller="RideRequests" asp-action="Create" method="post">
            <input type="hidden" name="RideId" value="@Model.Id" />
            <button type="submit" class="btn btn-primary">Pošlji zahtevo</button>
        </form>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Nazaj</a>
