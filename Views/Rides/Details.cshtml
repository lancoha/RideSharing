@model RideSharing.Models.Ride

@{
    ViewData["Title"] = "Ride Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Ride</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Origin
        </dt>
        <dd class="col-sm-10">
            @Model.Origin
        </dd>
        <dt class="col-sm-2">
            Destination
        </dt>
        <dd class="col-sm-10">
            @Model.Destination
        </dd>
        <dt class="col-sm-2">
            Date & Time
        </dt>
        <dd class="col-sm-10">
            @Model.DateTime.ToString("g")
        </dd>
        <dt class="col-sm-2">
            Driver
        </dt>
        <dd class="col-sm-10">
            @Model.Driver.FirstName @Model.Driver.LastName
        </dd>
        <dt class="col-sm-2">
            Vehicle
        </dt>
        <dd class="col-sm-10">
            @Model.Vehicle.Make @Model.Vehicle.Model
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
