@model IEnumerable<RideSharing.Models.Ride>

@{
    ViewData["Title"] = "Rides";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Ride</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Origin</th>
            <th>Destination</th>
            <th>Date & Time</th>
            <th>Driver</th>
            <th>Vehicle</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Origin</td>
            <td>@item.Destination</td>
            <td>@item.DateTime.ToString("g")</td>
            <td>@item.Driver.FirstName @item.Driver.LastName</td>
            <td>@item.Vehicle.Make @item.Vehicle.Model</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a> |
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
