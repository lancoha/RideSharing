@model IEnumerable<RideSharing.Models.ApplicationUser>

@{
    ViewData["Title"] = "Uporabniki";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj Uporabnika</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>City</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.City</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">Podrobnosti</a> |
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Uredi</a> |
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Izbri≈°i</a>
                </td>
            </tr>
        }
    </tbody>
</table>
