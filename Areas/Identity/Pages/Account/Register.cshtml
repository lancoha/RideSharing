@page
@model RegisterModel
@{
    ViewData["Title"] = "Registracija";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <section>
            <form method="post">
                <h4>Ustvari nov račun</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="Input.FirstName">Ime</label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.LastName">Priimek</label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Email">E-pošta</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Password">Geslo</label>
                    <input asp-for="Input.Password" class="form-control" type="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">Potrdi geslo</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Registriraj se</button>
            </form>
        </section>
    </div>
</div>
